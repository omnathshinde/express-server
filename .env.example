NODE_ENV=production

# 🌐 API Server
HOST = localhost
PORT = 3000
HTTPS = false

# 🔐 Authentication certificates for HTTPS
SSL_KEY_PATH=./certs/privkey.pem
SSL_CERT_PATH=./certs/fullchain.pem
SSL_CA_PATH=./certs/chain.pem

# 🛢️ Database
DB_NAME = your_db_name
DB_USER = your_db_user
DB_PASS = your_db_password
DB_HOST = localhost
DB_DIALECT = mysql

# 🔐 Auth
JWT_SECRET_KEY = your_super_secret_jwt_key_here
SESSION_TIMEOUT = 3600

# 📧 Email Notifications
SMTP_SERVICE = "Gmail"
SMTP_SECURE = false
SMTP_HOST = "smtp.gmail.com"
SMTP_PORT = "465"
MAIL_USER = your_email@example.com
MAIL_PASS = your_email_password_or_app_key
MAIL_FROM = "Your App <no-reply@example.com>"

# 🖨️ Printer Configuration
PRINTER_ENABLED = false
PRINTER_NAME = 
PRINTER_TYPE = network
PRINTER_HOST = 
PRINTER_PORT = 9100

# 📡 RFID / Scanner Input
RFID_READER_PORT = 4001
RFID_TIMEOUT = 3000
SCAN_INPUT_MODE = socket

# 🔌 Socket.IO / WebSocket
SOCKET_ENABLED = false
SOCKET_PORT = 4000
SOCKET_NAMESPACE = /events
SOCKET_SECURE = false

# 🏭 Warehouse Zone Logic
WAREHOUSE_ID = 
ZONE_DEFAULT = 
ENABLE_AUTO_ROUTING = false

# 📦 API Keys / External Integrations
EXTERNAL_API_KEY = 
